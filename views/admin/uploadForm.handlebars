<h3>upload.</h3>

<div class="upload-error">
    {{#each errors}}
        <p>{{this.msg}}</p>
    {{/each}}
</div>

<form id="upload-form" method="post" action="/admin/upload" enctype="multipart/form-data">

    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col"><input type="text" class="form-control" id="title" name="title" value="{{image.title}}"></div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col row">
                <label for="firstName" class="col-sm-3 col-form-label">First Name</label>
                <div class="col"><input type="text" class="form-control" id="firstName" name="firstName" value="{{image.creator.first}}"></div>
            </div>
            <div class="col row">
                <label for="lastName" class="col-sm-3 col-form-label">Last Name</label>
                <div class="col"><input type="text" class="form-control" id="lastName" name="lastName" value="{{image.creator.last}}"></div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col row">
            <label for="category" class="col-sm-3 col-form-label">Category</label>
            <div class="col"><input type="text" class="form-control" id="category" name="category" value="{{image.category}}"></div>
        </div>
        <div class="col row">
            <label for="tags" class="col-sm-3 col-form-label">Tags</label>
            <div class="col"><input type="text" class="form-control" id="tags" name="tags" value="{{image.tags}}"></div>
        </div>
    </div>

    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10"><input type="text" class="form-control" id="description" name="description" value="{{image.description}}"></div>
    </div>

    <div class="form-group upload">
        <label for="image">Upload an Image:</label>
        <br />
        <input type="file" id="image-file" name="image" accept="image/png, image/jpeg">
    </div>

    <div class="form-group"></div>
        <input class="btn btn-primary" id="upload-btn" type="submit" value="Upload" name="submit">
        <button type="button" class="btn btn-primary" id="cancel-btn" onclick="cancelDelete()">Cancel</button>
    </div>

</form>